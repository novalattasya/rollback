---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
import { Image } from 'astro:assets'
import logo from '../../public/static/logo.svg'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'

const { class: className } = Astro.props
---

<header class={cn('w-full border-b border-border bg-background', className)}>
  <div class="flex w-full items-center justify-between gap-4 lg:px-4 py-2">
    <Link href="/" class="flex shrink-0 items-center justify-center gap-3">
      <Image src={logo} alt="Logo" class="size-5 sm:size-6" />
      <span class="hidden h-full text-lg leading-none font-medium min-[400px]:block">
        {SITE.title}
      </span>
    </Link>
    <div class="flex items-center gap-4 sm:gap-4">
      <nav class="hidden items-center gap-4 text-sm sm:flex sm:gap-6">
        {
          NAV_LINKS.map((item) => (
            <Link
              href={item.href}
              class="text-foreground/60 hover:text-foreground/90 capitalize transition-colors"
            >
              {item.label}
            </Link>
          ))
        }
      </nav>
      <ThemeToggle transition:persist />
      <details class="sm:hidden relative group">
        <summary class="list-none p-2 cursor-pointer hover:bg-accent transition-colors">
          <Icon name="lucide:menu" class="size-5" />
        </summary>
        <div
        class="absolute right-0 mt-2 w-40 rounded-lg border border-border bg-background shadow-lg flex flex-col py-2 z-50 opacity-0 translate-y-1 pointer-events-none transition-all duration-200 group-open:opacity-100 group-open:translate-y-0 group-open:pointer-events-auto"
        >
        {
          NAV_LINKS.map((item) => (
            <Link
            href={item.href}
            class="block px-4 py-2 text-sm text-foreground/70 hover:bg-accent hover:text-foreground transition-colors"
            >
                {item.label}
              </Link>
            ))
          }
        </div>
      </details>
    </div>
  </div>
</header>
